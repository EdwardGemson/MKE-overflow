<% if logged_in? %>
  <%= link_to 'Post a question', new_question_path %>
<% end %>

<ul>
  <% @questions.each do |question| %>
  <li><%= link_to question.title, question_path(question)%></li>
<!--   <li><%=question.content%></li> this should be on the show page-->
  <% if current_user == question.user %>
    <%= link_to 'Delete post', question_path(question), method: :delete %>
    <%= link_to 'Edit post', edit_question_path(question)%>
  <% end %>
  <!-- REmove this later -->
  <br></br>
  <% end %>
</ul>
